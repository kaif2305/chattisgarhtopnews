<html>

<body>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200;300;400;600;700;800&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Raleway:wght@300&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Raleway&display=swap');

        #marq_outer {
            width: 100%;
            height: 37px;
            padding-top: 5px;
            padding-bottom: 10px;
            background-color: black;
            position: relative;

        }

        #marq_inner {
            width: 500px;
            margin-top: 10px;
            position: relative;
            display: flex;
            flex-wrap: nowrap;
        }

        #marq_time_box {
            width: 43px;
            height: 20px;
            color: white;
            font-weight: bolder;
            background-color: red;
            text-align: center;
            font-size: 13px;
            font-family: 'Nunito Sans';
            position: relative;
        }

        #container_marq_news
        {
            width: 100%;
            display: flex;
            position: relative;
            flex-wrap: nowrap;
        }

        #marq_text {
            font-family: 'Nunito Sans';
            font-size: 15px;
            margin-left: 8px;
            color: white;
            position: relative;
            overflow: hidden;
        }
    </style>
    <div id="marq_outer">
        <marquee direction="right">
            <div id="container_marq_news">
             {{#each mqe}}
            <div id="marq_inner">
               
                <div id="marq_time_box">
                    {{this.time}}
                </div>
                <div id="marq_text">
                   {{this.news}}
                </div>
            </div>
            {{/each}}

           
            </div>
        </marquee>
    </div>

</body>

</html>